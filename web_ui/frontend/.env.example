# ============================================================
# TermiVoxed Frontend Environment Configuration
# ============================================================
# Copy this file to .env and fill in the values
# For production, copy to .env.production
# ============================================================

# ============================================================
# Firebase Configuration (REQUIRED)
# ============================================================
# Get these values from Firebase Console > Project Settings > Your apps > Web app

VITE_FIREBASE_API_KEY=AIzaSy...
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================================
# Razorpay Configuration (REQUIRED for payments)
# ============================================================
# Get from Razorpay Dashboard > Settings > API Keys
# Use test keys for development, live keys for production

VITE_RAZORPAY_KEY_ID=rzp_test_...

# ============================================================
# API Configuration
# ============================================================
# Backend API URL
# Development: http://localhost:8000/api/v1
# Production: https://api.termivoxed.com/api/v1

VITE_API_URL=http://localhost:8000/api/v1

# ============================================================
# Feature Flags (Optional)
# ============================================================

# Enable debug mode (shows additional console logs)
VITE_DEBUG_MODE=false

# Enable analytics
VITE_ENABLE_ANALYTICS=true

# App version (auto-set during build)
VITE_APP_VERSION=1.0.0
