<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow network access for TTS and API calls -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow file access for video processing -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow downloads folder access -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Hardened runtime - required for notarization -->
    <key>com.apple.security.cs.allow-jit</key>
    <false/>

    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>

    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allow loading of third-party libraries (Python packages) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <false/>

    <!-- Disable executable memory protection (needed for Python) -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <false/>
</dict>
</plist>
